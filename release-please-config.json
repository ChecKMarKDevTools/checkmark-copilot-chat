{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "include-component-in-tag": false,
  "versioning": "default",
  "prerelease": false,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "changelog-type": "default",
  "include-v-in-tag": true,
  "pull-request-header": "📼 Pilot Episode: First Alpha Transmission",
  "always-update": false,
  "packages": {
    ".": {
      "extra-files": ["package.json", "version.txt"]
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "🎬 Blockbuster Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "🍿 Plot Twists (Bug Fixes)",
      "hidden": false
    },
    {
      "type": "perf",
      "section": "⚡️ Speed Boosts (Performance)",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "🎞️ Director's Cut (Refactors)",
      "hidden": true
    },
    {
      "type": "chore",
      "section": "🧹 Studio Maintenance (Chores)",
      "hidden": true
    },
    {
      "type": "docs",
      "section": "📖 Script Notes (Docs)",
      "hidden": true
    },
    {
      "type": "style",
      "section": "💄 Styling Touchups",
      "hidden": true
    },
    {
      "type": "test",
      "section": "🧪 Screen Tests",
      "hidden": true
    }
  ]
}
